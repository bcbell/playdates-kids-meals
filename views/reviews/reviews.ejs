<%-include('../partials/header')%>
<body class="locationsPage">

<% if (user) {%>

                    <h1 id="headerRecipes" class="display-4">Reviews </h1>
                  <div id="reviewsAll">
                    <h4 class="locationsDisplay">Read about the experiences of other families at , wanna share your experience? Leave a review below: </h4>
              
                <br>
              <div id="reviewForm">     
                <form action="/reviews " method="POST">
                  <label>Title</label>
                  <input name="title" type="text" placeholder="Title"><br>
                  <label for="reviewRating">Review for: </label>
                  <input type="radio" id="reviewRating" name="model" value="Restaurant">Restaurant  
                  <input type="radio" id="reviewRating" name="model" value="Recipe">Recipe 
                  <input type="radio" id="reviewRating" name="model" value="Location">Attraction <br>
                  <label>Location</label>
                  <input name="location" type="text" placeholder="Location Name..."><br>
                  <label>Review</label>
                  <textarea name="content" row="4" style="width: 18rem;" placeholder="Please review your experience at "></textarea> <br>
                  <label for="reviewRating">Rating: </label>
                  <input type="radio" id="reviewRating" name="rating" value="Would recommend">üëç Would highly recommend  
                  <input type="radio" id="reviewRating" name="rating" value="May visit again">Would consider going back 
                  <input type="radio" id="reviewRating" name="rating" value="Would not recommend">Would not recommend üëé <br>
                  

                
      
                  <button id="reviews" type="submit">Submit Review</button>
                  </form>
    
</div> 
         </div>           
                      <%if (reviews.length){%>
                   
                      <%reviews.forEach((review) =>{%> 
                     
                        <div class="reviewLocation">
                           
                          <div> <h2><strong><%=review.title%></strong></h2><h5><%=review.rating%></h5></div>
                          
                         <h4><%=review.content%></h4> 
                         
                        <h5>Posted by:<%=review.postedBy%></h5>
                        <h6><%=review.Createdat.toLocaleString()%></h6>

                        </div>
                      <%})%>
                   <%} else {%>
           <br><h5 class="reviews"> Be the first to review  </h5> 
           <%}%>
         </div>

   <%} else{%>
   

   <p class="mealsLogin"></p><%= user ? user.name : "friend" %>, login in below to review!</p>

   <div class="loginAccount">
       <a id="google" class="googleAccount" href="/auth/google">
          <img height= 200 width= 200 id= "login" class= "googleAccount" src="https://i.imgur.com/pFhNdoN.png"></a>
<%}%>
</div>
<%-include('../partials/footer')%>

<script>
    $('.dropdown-toggle').dropdown()
</script>
<script>
    $(function () {
      $('#myTab li:last-child a').tab('show')
    })
  </script>

</body>

  



