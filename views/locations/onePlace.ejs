
<%-include('../partials/header')%>
<body class="locationsPage">
 <h1>Hey, <%= user ? user.name : "friend" %> let's try this <%= title %> !</h1>


<div class= "tabsLocation">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
   
          <li class="nav-item" role="presentation">
        <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="messages" aria-selected="false"><%=location.placename%> </a>
      </li> 
    </ul>
    
    <div class="tab-content">
      <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">...</div> 

             
 <!-- Location Details -->
 <div class="tab-pane" id="messages" role="tabpanel" aria-labelledby="messages-tab">
  <div class="list-group">
      <div id="locationDisplay" class="jumbotron jumbotron-fluid">
          <div class="container">
            <h1 id="headerRecipes" class="display-4"> <%=location.placename%> </h1>

            <h4 class="recipeDisplay"> <%=location.placename%></h4>
            <h4 class="recipeDisplay"><%=location.placeaddress%></h4>
            <h4 class="recipeDisplay"><%=location.placecity%> , <%=location.state%> <%=location.placezipcode%></h4>

            <h4 class="recipeDisplay">Attraction Type: <%=location.locationType%></h4>

            <div><h3 class="locationsDisplay">This location is appropriate for the following age groups:</h3><h4 class="recipeDisplay"> <%=location.age%></h4></div>
            <br>
                    


                </div>
                      
          </div>
        </div>
</div>
</div>
    

</div>
</div>
    


<%-include('../partials/footer')%>

<script>
    $('.dropdown-toggle').dropdown()
</script>
<script>
    $(function () {
      $('#myTab li:last-child a').tab('show')
    })
  </script>

</body>